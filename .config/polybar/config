[module/powermenu]
type = custom/menu

format-padding = 5

label-open = 
label-close = 
label-separator = |

menu-0-0 = Lock
menu-0-0-foreground = #fba922
menu-0-0-exec = menu-open-1
menu-0-1 = Logout
menu-0-1-foreground = #fba922
menu-0-1-exec = menu-open-2
menu-0-2 = Suspend
menu-0-2-foreground = #fba922
menu-0-2-exec = menu-open-3
menu-0-3 = Reboot
menu-0-3-foreground = #fba922
menu-0-3-exec = menu-open-4
menu-0-4 = Shutdown
menu-0-4-foreground = #fba922
menu-0-4-exec = menu-open-5

menu-1-0 = Lock
menu-1-0-foreground = #ff5555
menu-1-0-exec = ~/.bin/i3lock-color
menu-1-1 = Cancel
menu-1-1-foreground = #fba922
menu-1-1-exec = menu-close

menu-2-0 = Logout
menu-2-0-foreground = #ff5555
menu-2-0-exec = i3-msg exit
menu-2-1 = Cancel
menu-2-1-foreground = #fba922
menu-2-1-exec = menu-close

menu-3-0 = Suspend
menu-3-0-foreground = #ff5555
menu-3-0-exec = ~/.bin/i3lock-color && sleep 0.25 && systemctl suspend
menu-3-1 = Cancel
menu-3-1-foreground = #fba922
menu-3-1-exec = menu-close

menu-4-0 = Reboot
menu-4-0-foreground = #ff5555
menu-4-0-exec = systemctl reboot
menu-4-1 = Cancel
menu-4-1-foreground = #fba922
menu-4-1-exec = menu-close

menu-5-0 = Shutdown
menu-5-0-foreground = #ff5555
menu-5-0-exec = systemctl poweroff
menu-5-1 = Cancel
menu-5-1-foreground = #fba922
menu-5-1-exec = menu-close

[module/pavolume]
type = custom/script
tail = true
interval = 2
label = %output%
exec = ~/.bin/polybar-pavolume --listen 2>/dev/null 
click-left = ~/.bin/polybar-pavolume --togmute
scroll-up = amixer set Master 5%+
scroll-down = amixer set Master 5%-

[module/mpris]
type = custom/script
interval = 0.1

click-left = playerctl play-pause
click-middle = playerctl previous
click-right = playerctl next
label = %output%
exec = ~/.bin/polybar-mpris

[module/clock]
type = internal/date
interval = 2
date = %%{F#999}%Y-%m-%d%%{F-} %%{F#fff}%H:%M%%{F-}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
