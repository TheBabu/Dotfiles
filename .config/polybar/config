;Top Bar
[bar/top]
monitor = ${env:MONITOR:HDMI1}
monitor-fallback = eDP1

width = 100%
height = 35

background = #222
foreground = #ccffffff

line-color = ${bar/bottom.background}
line-size = 16

spacing = 2
padding-right = 5
module-margin = 4

font-0 = NotoSans-Regular:size=10;1
font-1 = MaterialIcons:size=12;2
font-2 = Termsynu:size=10:antialias=false;0
font-3 = FontAwesome:size=12;2

modules-left = powermenu
modules-right = mpris pavolume backlight wireless-network wired-network battery date

enable-ipc = true

;Bottom Bar
[bar/bottom]
monitor = ${env:MONITOR:HDMI1}
