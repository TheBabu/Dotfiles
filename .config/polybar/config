[module/date]
type = internal/date
format-prefix = "   "
label = %{F#99}%date%%{F-}   %{F#fff}%time%%{F-}
date = %m/%d/%Y
date-alt = %%{F#fff}%A, %B %d, %Y%%{F-}
time = %I:%M %p
time-alt = ${self.time}

[module/memory]
type = internal/memory
